generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Screenshot {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  imageData   Bytes
  mimeType    String
  fileName    String?
  position    Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
